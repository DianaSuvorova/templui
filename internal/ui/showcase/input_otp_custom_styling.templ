	}) {
		@components.InputOTPGroup(components.InputOTPGroupProps{
			Class: "gap-3",
		}) {
			@components.InputOTPSlot(0, components.InputOTPSlotProps{
				Class: "w-12 h-14 bg-primary/10 border-primary text-lg font-bold",
			})
