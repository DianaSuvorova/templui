package showcase

import "github.com/axzilla/templui/components"

templ InputOTPCustomLength() {
	@components.InputOTP(components.InputOTPProps{
		ID:        "otp-custom-length",
		MaxLength: 4,
	}) {
		@components.InputOTPGroup() {
			@components.InputOTPSlot(0)
			@components.InputOTPSlot(1)
			@components.InputOTPSlot(2)
			@components.InputOTPSlot(3)
		}
	}
}
